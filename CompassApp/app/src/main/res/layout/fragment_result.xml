<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/viewTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_titlebar"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/lblNavTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="SPOTTZ"
            android:textColor="@color/white"
            android:textSize="@dimen/fsize_button"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:paddingRight="45dp"
            android:paddingTop="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:paddingLeft="45dp"
            android:paddingRight="4dp"
            android:paddingTop="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="Test Result"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fsize_result_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTotalScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Test Result"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fsize_result_score"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/lblTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Total Questions : 30"
            android:textColor="@color/black"
            android:textSize="@dimen/fsize_question"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_right_answer"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Correct Answer : 10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fsize_question"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblWrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_wrong_answer"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Wrong Answer : 20"
            android:textColor="@color/red"
            android:textSize="@dimen/fsize_question"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/lblTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Wrong Answer : 20"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fsize_question"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_field"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rborder_input"
            android:hint="Email adres"
            android:inputType="textEmailAddress"
            android:padding="7dp" />

        <TextView
            android:id="@+id/lblShareDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Wrong Answer : 20"
            android:textColor="@color/colortime"
            android:textSize="@dimen/fsize_detail_content" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rborder_button"
            android:text="SHARE SELFIE"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fsize_button" />
    </LinearLayout>
</RelativeLayout>
